---
import "@/styles/global.css";

import { Image } from "astro:assets";

import BlahajImage from "@/assets/blahaj.webp";
import Fonts from "@/components/Fonts.astro";
import MetaTags from "@/components/MetaTags.astro";
import { cards } from "@/scripts/cards";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <MetaTags />
        <Fonts />
    </head>
    <body class="bg-background text-foreground min-h-screen">
        <div class="bg-background-alt flex w-full flex-col items-center justify-center sm:flex-row">
            <section
                class="flex flex-col-reverse items-center justify-center gap-4 p-4 not-sm:pb-0 sm:flex-row"
            >
                <div class="w-full text-center sm:text-left">
                    <h1 class="text-4xl">BLÅHAJ.GROUP</h1>
                    <p>A silly webring for a group of developer friends.</p>
                </div>
                <Image src={BlahajImage} alt="Blåhaj" class="h-48 w-48" />
            </section>
            <nav
                class="flex flex-row items-stretch justify-center gap-4 p-4 sm:flex-col sm:justify-between sm:p-8"
            >
                <a
                    class="rounded bg-blue-400 px-4 py-2 text-center text-black select-none hover:bg-blue-500"
                >
                    Random
                </a>
                <a
                    class="rounded bg-blue-400 px-4 py-2 text-center text-black select-none hover:bg-blue-500"
                >
                    Next
                </a>
                <a
                    class="rounded bg-blue-400 px-4 py-2 text-center text-black select-none hover:bg-blue-500"
                >
                    Previous
                </a>
            </nav>
        </div>

        <div class="flex flex-row flex-wrap justify-center gap-5 p-5">
            {
                cards.map((card) => (
                    <div class="relative h-80 w-180 overflow-visible">
                        <card.component meta={card.meta} />
                    </div>
                ))
            }
        </div>
    </body>
</html>
